<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" 
	android:gravity="center"
	android:background="#E0E0E0">
	<RelativeLayout 
		android:gravity="center_horizontal"
		android:layout_width="fill_parent" android:layout_height="50dip"
		>
		<TextView 
		android:layout_alignParentTop="true"
		android:layout_width="fill_parent" android:textColor="#565656"
		android:layout_height="50dip" android:layout_gravity="center"
		android:background="@drawable/umeng_analyse_feedback_bar_bg" 
		android:layout_alignParentBottom="true"/>
		<TextView  android:id="@+id/notice_title" 
		android:layout_alignParentTop="true"
		android:layout_width="fill_parent" android:textColor="#565656"
		android:layout_marginTop="5dip"
		android:layout_marginLeft="50dip"
		android:layout_marginRight="50dip"
		android:layout_height="50dip" android:layout_gravity="center"
		android:gravity="center|center"  android:textSize="18dip"
		/>
		
		</RelativeLayout>
		
		<Button android:id="@+id/setoffice"
			android:gravity="center"
		android:layout_marginTop="10dip"
		android:layout_marginBottom="10dip"
			android:layout_width="fill_parent" android:paddingLeft="15dip" android:paddingRight="15dip" android:layout_height="30dip"
			android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
			android:layout_centerVertical="true"
			android:background="@drawable/umeng_analyse_submit_selector"
			android:visibility="gone"
			android:textColor="#FFFFFF" />
		 
<ListView android:id="@android:id/list" 
			  android:layout_gravity="top" 
			  android:dividerHeight="0px"
			  android:cacheColorHint="#00000000"
			  android:divider="#E0E0E0"
			  android:background="#E0E0E0"
			  android:layout_weight="1"
			  android:transcriptMode="alwaysScroll"
			  android:layout_height="fill_parent"
			  android:layout_width="fill_parent"
	></ListView>
	
</LinearLayout>