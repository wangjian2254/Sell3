<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" 
	android:gravity="center"
	 android:focusable="true"  
   android:focusableInTouchMode="true"
	android:background="#E0E0E0">
	<RelativeLayout 
		android:gravity="center_horizontal"
		android:layout_width="fill_parent" android:layout_height="50dip"
		>
		<TextView 
		android:layout_alignParentTop="true"
		android:layout_width="fill_parent" android:textColor="#565656"
		android:layout_height="50dip" android:layout_gravity="center"
		android:background="@drawable/umeng_analyse_feedback_bar_bg" 
		android:layout_alignParentBottom="true"/>
		<TextView  android:id="@+id/notice_title" 
		android:layout_alignParentTop="true"
		android:layout_width="fill_parent" android:textColor="#565656"
		android:layout_marginTop="5dip"
		android:layout_marginLeft="50dip"
		android:layout_marginRight="50dip"
		android:layout_height="50dip" android:layout_gravity="center"
		android:gravity="center|center"  android:textSize="18dip"
		/>
		
		</RelativeLayout>
		<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" >
		<LinearLayout 
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical"  
	>
		<TextView android:id="@+id/officename"
		style="@style/xiaoshou2"
		/>
		<Button android:id="@+id/setoffice"
			android:gravity="center"
			android:layout_marginBottom="3dip"
			android:layout_width="fill_parent" android:paddingLeft="15dip" android:paddingRight="15dip" android:layout_height="30dip"
			android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
			android:layout_centerVertical="true"
			android:text="重设厅台"
			android:background="@drawable/umeng_analyse_submit_selector"
			android:textColor="#FFFFFF" />
		<TextView android:id="@+id/product"
		 android:layout_height="40dip"
			style="@style/xiaoshou2"
		/>
		<Button android:id="@+id/setproduct"
			android:gravity="center"
			android:layout_marginBottom="3dip"
			android:layout_width="fill_parent" android:paddingLeft="15dip" android:paddingRight="15dip" android:layout_height="30dip"
			android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
			android:layout_centerVertical="true"
			android:text="重新扫描设备二维码"
			android:onClick="gotoCapture"
			android:background="@drawable/umeng_analyse_submit_selector"
			android:textColor="#FFFFFF" />
		<TextView android:id="@+id/producttype"
		android:layout_height="40dip"
			style="@style/xiaoshou2"
		/>
		<Button android:id="@+id/setproducttype"
			android:gravity="center"
			android:layout_marginBottom="3dip"
			android:layout_width="fill_parent" android:paddingLeft="15dip" android:paddingRight="15dip" android:layout_height="30dip"
			android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
			android:layout_centerVertical="true"
			android:text="重新扫描设备类别"
			android:onClick="gotoCapture"
			android:background="@drawable/umeng_analyse_submit_selector"
			android:textColor="#FFFFFF" />
	
		<TextView android:id="@+id/imie"
		android:layout_height="40dip"
			style="@style/xiaoshou2"
			android:text="sd"
		/>
		<Button android:id="@+id/setimie"
			android:gravity="center"
			android:layout_width="fill_parent" android:paddingLeft="15dip" android:paddingRight="15dip" android:layout_height="30dip"
			android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
			android:layout_centerVertical="true"
			android:text="重新扫描设备IMIE"
			android:onClick="gotoCapture"
			android:background="@drawable/umeng_analyse_submit_selector"
			android:textColor="#FFFFFF" />
	
	
		
	<LinearLayout android:id="@+id/giftlayout"
	android:layout_marginBottom="3dip"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical"  
	android:gravity="center"

	>
	
	
	</LinearLayout>
	<LinearLayout 
	android:layout_marginBottom="5dip"
	android:layout_width="fill_parent" android:layout_height="40dip"
	android:orientation="horizontal"  android:gravity="center"
	>
	<Button android:id="@+id/cleangift"
	android:layout_marginTop="5dip"
			android:gravity="center"
			android:layout_width="120dip" android:paddingLeft="15dip" android:paddingRight="15dip" android:layout_height="30dip"
			android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
			android:layout_centerVertical="true"
			android:text="清空礼品"
			android:onClick="gotoCapture"
			android:background="@drawable/umeng_analyse_submit_selector"
			android:textColor="#FFFFFF" />
	<Button android:id="@+id/addgift"
	android:layout_marginTop="5dip"
			android:gravity="center"
			android:layout_width="120dip" android:paddingLeft="15dip" android:paddingRight="15dip" android:layout_height="30dip"
			android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
			android:layout_centerVertical="true"
			android:text="添加新礼品"
			android:onClick="gotoCapture"
			android:background="@drawable/umeng_analyse_submit_selector"
			android:textColor="#FFFFFF" />
	</LinearLayout>
	<TextView android:layout_marginBottom="3dip"
	android:layout_marginTop="5dip"
	android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	style="@style/xiaoshou2"
	android:text="请输入客户的手机号码："
	/>
	<EditText android:id="@+id/tel"
	android:layout_marginBottom="3dip"
	android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:numeric="integer"
	android:singleLine="true"
	/>
	<Button 
	android:id="@+id/btnSubmit"
			android:gravity="center"
			android:layout_marginBottom="50dip"
			android:layout_width="fill_parent" android:paddingLeft="15dip" android:paddingRight="15dip" android:layout_height="30dip"
			android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
			android:layout_centerVertical="true"
			android:text="提交"
			
			android:onClick="submintXiaoShou"
			android:background="@drawable/umeng_analyse_submit_selector"
			android:textColor="#FFFFFF" />
	<Button 
	android:id="@+id/btnReSubmit"
			android:gravity="center"
			android:layout_marginBottom="50dip"
			android:layout_width="fill_parent" android:paddingLeft="15dip" android:paddingRight="15dip" android:layout_height="30dip"
			android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
			android:layout_centerVertical="true"
			android:text="保存到本机"
			android:visibility="gone"
			android:onClick="savePhone"
			android:background="@drawable/umeng_analyse_submit_selector"
			android:textColor="#FFFFFF" />
	
	</LinearLayout>
	</ScrollView>
</LinearLayout>