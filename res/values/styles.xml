<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

 <style name="recent_list_item_name">
 		  <!-- 字体大小 -->
      <item name="android:textSize">18.0sp</item>
       <!-- 字体颜色 -->
      <item name="android:textColor">#ff000000</item>
  </style>
    
  <style name="recent_list_item_info">
  		  <!-- 字体大小 -->
        <item name="android:textSize">14.0sp</item>
         <!-- 字体颜色 -->
        <item name="android:textColor">#ff828282</item>
  </style>
  <style name="detail_default">
  		  <!-- 字体大小 -->
        <item name="android:textSize">16.0sp</item>
         <!-- 字体颜色 -->
        <item name="android:textColor">#ff000000</item>
  </style>
  
  <style name="xiaoshou2">
  	<item name="android:gravity">center</item>
  	<item name="android:layout_marginBottom">3dip</item>
  	<item name="android:layout_width">fill_parent</item>
  	<item name="android:paddingLeft">15dip</item>
  	<item name="android:paddingRight">15dip</item>
  	<item name="android:layout_height">30dip</item>
  	<item name="android:textSize">18dip</item>
  	<item name="android:textColor">#ff000000</item>
  </style>
  
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@drawable/loading_dialog_shape</item>
    </style>
</resources>
